<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/sayıGöster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/editTextBackground"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="80dp"
        android:paddingRight="20dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textColor="@color/buttonBackground"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSil"
                android:layout_width="90dp"
                android:layout_height="90dp"


                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSilTik"
                android:text="AC"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnArtıEksi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="+/-"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnYüzde"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnYüzdeTik"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnBölme"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnOpTik"
                android:text="/"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnÇarpım"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnOpTik"
                android:text="*"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnÇıkarma"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnOpTik"
                android:text="-"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnTopla"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnOpTik"
                android:text="+"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="90dp"
            android:layout_height="90dp">

            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnSayiTık"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnNokta"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/buttonkenarlik"
                android:onClick="btnNoktaTik"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnEşittir"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@color/editTextBackground"
                android:onClick="btnEşittirTik"
                android:text="="
                android:textColor="@color/buttonBackground"
                android:textSize="30sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>